  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run bot",
      "type": "debugpy",
      "request": "launch",
      "module": "crypto_futures_bot.main",
      "console": "integratedTerminal",
      "args": [],
      "justMyCode": false
    },
    {
      "name": "Run CLI",
      "type": "debugpy",
      "request": "launch",
      "module": "crypto_futures_bot.scripts.cli",
      "console": "integratedTerminal",
      "args": [
        "research",
        "--currency=DOGE",
        "--days=2",
        // "--no-apply-paralellism",
      ],
      "justMyCode": false
    },
    {
      "name": "Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Unit Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO", "tests/unit_tests"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
    {
      "name": "Pytest: Integration tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-x", "--log-cli-level=INFO", "tests/integration_tests"],
      "envFile": "${workspaceFolder}/.env.pytest",
      "justMyCode": false
    },
  ]
}
